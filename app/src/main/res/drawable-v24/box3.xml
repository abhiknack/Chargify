<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/dark"/>
            <corners android:radius="8dp"/>
        </shape>

    </item>

    <!--  left shadow -->

    <!--  right shadow -->

    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#00E61515"
                android:centerY="0.1"
                android:endColor="#001323B8"
                android:startColor="#FF000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!--  bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#003C3C3C"
                android:centerY="0.1"
                android:endColor="#00222222"
                android:startColor="#00000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>